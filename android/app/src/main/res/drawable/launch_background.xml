<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this file to customize launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#000036"
                android:endColor="#4F004F"
                android:type="linear"
                android:angle="-90"
                />
        </shape>
    </item>

     <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/launch_image" />
    </item>

    <item android:bottom="20dp" >
        <bitmap
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:alpha="0.85"
            android:src="@mipmap/from_text" />
    </item>
</layer-list>
